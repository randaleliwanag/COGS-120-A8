<body class="wellness-routine">

<div class="container">
    <div class="row align-items-center">
        <div class="col" align="center">
            <button class="btn btn-lg btn-secondary fas fa-home" onclick="location.href='/index'" id="home-btn"></Button>
        </div>
        <div class="col"></div>

        <div class="col" align="center">
    			<button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    				<i class="fas fa-bars"> </i>
    			</button>
    			<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
    				<li><a class="dropdown-item disabled" href="#">Profile</a></li>
                    <li><a class="dropdown-item disabled" href="#">Log History</a></li>
    				<li><a class="dropdown-item disabled" href="#">Settings</a></li>
    				<li><a class="dropdown-item disabled" href="#">Help</a></li>
    				<div class="dropdown-divider"></div>
    				<li><a class="dropdown-item" href="/">Sign Out</a></li>
    			</ul>
    		</div>
    </div>

    <div class="row align-items-center text-center">
        <div class="jumbotron">
            <h1>Edit Routine</h1>
        </div>
    </div>

    <div class="row">
        <h3>Add a daily wellness activity:</h3>
    </div>


    <div class="col text-center" id="routine-options">
        {{#each wellness}}
        <button type="button" class="btn btn-light routine-btn">{{this}}</button>
        {{/each}}
        <button type="button" class="btn btn-light add-routine" id="add-routine">Add <i class="fas fa-plus"></i></button>
    </div>


    <div class="row">
        <h3>Add daily supplements:</h3>
    </div>

    <div class="col text-center" id="supplement-options">
        {{#each supplements}}
        <button type="button" class="btn btn-light supplement-btn">{{this}}</button>
        {{/each}}
        <button type="button" class="btn btn-light add-supplement" id="add-supplement">Add <i class="fas fa-plus"></i></button>

        {{!-- These are the original face buttons. Not sure if we are going to keep them or remove them. --}}
