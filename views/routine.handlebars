        <div class="col-1 text-center"><button type="button" class="btn btn-light far fa-meh fa-2x"></button></div>
        <div class="col-1 text-center"><button type="button" class="btn btn-light far fa-smile fa-2x"></button></div>
        <div class="col-1 text-center"><button type="button" class="btn btn-light far fa-laugh-beam fa-2x"></button></div> --}}
    </div>


    <div class="row">
        <h3>Add daily medications:</h3>
    </div>

    <div class="col text-center" id="med-options">
        {{#each medication}}
        <button type="button" class="btn btn-light med-btn">{{this}}</button>
        {{/each}}
        <button type="button" class="btn btn-light" id="add-med">Add <i class="fas fa-plus"></i></button>
    </div>

    <div class = "row">
      <div class="col text-center">
        <button type="button" class="btn btn-primary" onclick="location.href='/index'" id="back-btn"><i class="fas fa-arrow-left"></i> Back</button>
      </div>

      <div class="col"></div>

      <div class="col text-center">
        <button type="button" class="btn btn-primary" onclick="location.href='/index'" id="save-btn">Save</button>
      </div>
    </div>

