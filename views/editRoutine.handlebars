</head>
<body class="edit-routine">

<div class="container">
    <div class="row d-flex justify-content-around my-3">
        <div class="col-3" align = "right">
            <button class="btn btn-lg btn-secondary fas fa-home" onclick="location.href='/index'"></Button>
        </div>

        <div class="col-4 title-header">
            <div class="jumbotron">
                <h1 class="display-4">Edit Routine</h1>
            </div>
        </div>

        <div class="col-3 dropdown">
			<button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
				<i class="fas fa-bars"> </i>
			</button>
			<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
				<li><a class="dropdown-item" href="#">Profile</a></li>
                <li><a class="dropdown-item" href="#">Log History</a></li>
				<li><a class="dropdown-item" href="#">Settings</a></li>
				<li><a class="dropdown-item" href="#">Help</a></li>
				<div class="dropdown-divider"></div>
				<li><a class="dropdown-item" id="signOut">Sign Out</a></li>
			</ul>
		</div>
    </div>


    <div class="row mb-1">
        <div class="col-sm-9 offset-sm-1 col-md-6 offset-md-1 col-lg-6 offset-lg-1 col-11 offset-1">
            <h3>Add a daily wellness activity:</h3>
        </div>
    </div>


    <div class="row gx-0 row-cols-3 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 mb-3">
        {{#each wellness}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light activity-btn">{{this}}</button></div>
        {{/each}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light">Add <i class="fas fa-plus"></i></button></div>
    </div>


    <div class="row mb-1">
        <div class="col-sm-9 offset-sm-1 col-md-6 offset-md-1 col-lg-6 offset-lg-1 col-11 offset-1">
            <h3>Add daily supplements:</h3>
        </div>
    </div>

    <div class="row gx-0 row-cols-3 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 mb-3">
        {{#each supplements}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light supplement">{{this}}</button></div>
        {{/each}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light medication">Add <i class="fas fa-plus"></i></button></div>
    </div>


    <div class="row mb-1">
        <div class="col-sm-9 offset-sm-1 col-md-6 offset-md-1 col-lg-6 offset-lg-1 col-11 offset-1">
            <h3>Add daily medications:</h3>
        </div>
    </div>

    <div class="row gx-0 row-cols-3 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 mb-3">
        {{#each medication}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light medication">{{this}}</button></div>
        {{/each}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light">Add <i class="fas fa-plus"></i></button></div>
    </div>

        <div class = "pull-left mb-4">
            <button type="button" id="routine" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Back</button>
        </div>

        <div class = "pull-right mb-4">
            <button type="button" id="save" class="btn btn-primary" onclick="location.href='/routine'">Save</button>
          </div>
    </div>
</div>

<script src="/js/alerts.js"></script>
<script src="/js/routine.js"></script> 
</body>
</html>