    {{!-- <link href="/css/bootstrap.min.css" rel="stylesheet"> --}}
    <link rel="stylesheet" href="/css/styles.css">

</head>
<body class="end-day">

<div class="container">
    <div class="row d-flex justify-content-around my-3">
        <div class="col-3" align = "right">
            <button class="btn btn-lg btn-secondary fas fa-home" onclick="location.href='/index'"></Button>
        </div>

        <div class="col-4 title-header">
            <div class="jumbotron">
                <h1 class="display-4">End Day</h1>
            </div>
        </div>

        <div class="col-3 dropdown">
			<button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
				<i class="fas fa-bars"> </i>
			</button>
			<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
				<li><a class="dropdown-item disabled" href="#">Profile</a></li>
                <li><a class="dropdown-item disabled" href="#">Log History</a></li>
				<li><a class="dropdown-item disabled" href="#">Settings</a></li>
				<li><a class="dropdown-item disabled" href="#">Help</a></li>
				<div class="dropdown-divider"></div>
				<li><a class="dropdown-item" id="signOut">Sign Out</a></li>
			</ul>
		</div>
    </div>


    <div class="row mb-1">
        <div class="col-sm-9 offset-sm-1 col-md-6 offset-md-1 col-lg-6 offset-lg-1 col-11 offset-1">
            <h3>What time are you sleeping?</h3>
        </div>
    </div>

    <form>
        <div class = "row form-group col-sm-8 col-md-6 col-lg-4 col-8 mt-3 mx-auto">
            <input type="time" class = "text-center" id="sleep" name="sleep">
        </div>
    </form><br>

    <div class="row mb-1">
        <div class="col-sm-9 offset-sm-1 col-md-6 offset-md-1 col-lg-6 offset-lg-1 col-11 offset-1">
            <h3>How are you feeling?</h3>
        </div>
    </div>

    <div class="row gx-0 row-cols-3 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 mb-3">
        {{#each mood}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light mood-btn">{{this}}</button></div>
        {{/each}}
        {{!-- <div class="col text-center mb-3"><button type="button" class="btn btn-light add-mood">Add <i class="fas fa-plus"></i></button></div> --}}
    </div>


    <div class="row mb-1">
        <div class="col-sm-9 offset-sm-1 col-md-6 offset-md-1 col-lg-6 offset-lg-1 col-11 offset-1">
            <h3>Any physical symptoms?</h3>
        </div>
    </div>

    <div class="row gx-0 row-cols-3 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 mb-3">
        {{#each symptom}}
        <div class="col text-center mb-3"><button type="button" class="btn btn-light symptom-btn">{{this}}</button></div>
        {{/each}}
        {{!-- <div class="col text-center mb-3"><button type="button" class="btn btn-light add-symptom">Add <i class="fas fa-plus"></i></button></div> --}}
    </div>

        {{!-- Button should be submit type I think --}}
        <div class = "pull-left">
                <button type="button" id="back" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Back</button>
            </div>

        <div class = "pull-right">
                <button type="button" class="btn btn-primary log-data">Submit</button>
            </div>
    </div>
</div>

<script src="../js/end.js"></script> 
<script src="/js/alerts.js"></script>

</body>
</html>