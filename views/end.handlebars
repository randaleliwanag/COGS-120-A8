    {{!-- <link href="/css/bootstrap.min.css" rel="stylesheet"> --}}
    <link rel="stylesheet" href="/css/styles.css">

</head>
<body class="end-day">

<div class="container">
    <div class="row align-items-center">
        <div class="col" align="center">
            <button class="btn btn-lg btn-secondary fas fa-home" onclick="location.href='/index'" id="home-btn"></Button>
        </div>

        <div class="col"></div>

        <div class="col" align="center">
    			<button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    				<i class="fas fa-bars"> </i>
    			</button>
    			<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
    				<li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><a class="dropdown-item" href="#">Log History</a></li>
    				<li><a class="dropdown-item" href="#">Settings</a></li>
    				<li><a class="dropdown-item" href="#">Help</a></li>
    				<div class="dropdown-divider"></div>
    				<li><a class="dropdown-item" href="/">Sign Out</a></li>
    			</ul>
		   </div>
    </div>

    <div class="row align-items-center text-center">
        <div class="jumbotron">
            <h1>End Day</h1>
        </div>
    </div>

    <div class="row">
        <h3>What time are you sleeping?</h3>
    </div>

    <div class="row text-center">
      <form>
          <input type="time" class = "text-center" id="sleep" name="sleep">
      </form>
    </div>

    <div class="row">
        <h3>How are you feeling?</h3>
    </div>

    <div class="col text-center" id="mood-options">
          {{#each mood}}
          <button type="button" class="btn btn-light mood-btn">{{this}}</button>
          {{/each}}
          <button type="button" class="btn btn-light" id="add-mood">Add <i class="fas fa-plus"></i></button>

    </div>

    <div class="row">
        <h3>Any physical symptoms?</h3>
    </div>

    <div class="col text-center" id="symptom-options">
        {{#each symptom}}
        <button type="button" class="btn btn-light symptom-btn">{{this}}</button>
        {{/each}}
        <button type="button" class="btn btn-light" id="add-symptom">Add <i class="fas fa-plus"></i></button>
    </div>

        {{!-- Button should be submit type I think --}}
    <div class="row">
      <div class="col text-center">
          <button type="button" class="btn btn-primary" onclick="location.href='/index'" id="back-btn"><i class="fas fa-arrow-left"></i> Back</button>
      </div>

      <div class="col"></div>

      <div class="col text-center">
          <button type="button" class="btn btn-primary" onclick="location.href='/summary'" id="save-btn">Save</button>
      </div>
    </div>
</div>

</body>
</html>
