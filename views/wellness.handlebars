    {{!-- <link href="/css/bootstrap.min.css" rel="stylesheet"> --}}
    <link rel="stylesheet" href="/css/styles.css">

</head>
<body class="wellness-routine">

<div class="container">
    <div class="row align-items-center" style="margin: 15px;">
        <div class="col" align="center">
            <button class="btn btn-lg btn-secondary fas fa-home" onclick="location.href='/index'"></Button>
        </div>

		<div class="col"></div>

		<div class="col" align="center">
			<button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
				<i class="fas fa-bars"> </i>
			</button>
			<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
				<li><a class="dropdown-item" href="#">Profile</a></li>
				<li><a class="dropdown-item" href="#">Log History</a></li>
				<li><a class="dropdown-item" href="#">Settings</a></li>
				<li><a class="dropdown-item" href="#">Help</a></li>
				<div class="dropdown-divider"></div>
				<li><a class="dropdown-item" href="/">Sign Out</a></li>
			</ul>
		</div>
    </div>

    <div class="row align-items-center">
		<div class="col"></div>

		<div class="col" align="center">
        	<div class="jumbotron">
            	<h1 id="name">Wellness Routine</h1>
        	</div>
    	</div>

		<div class="col"></div>
	</div>


    <div class="row mb-1">
        <div class="col-sm-9 offset-sm-1 col-md-6 offset-md-1 col-lg-6 offset-lg-1 col-11 offset-1">
            <h3>Wellness Activities:</h3>
        </div>
    </div>


    <div class="row gx-0 row-cols-3 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 mb-3">
        {{#each wellness}}
        <div class="col text-center mb-3"><input type="checkbox">{{this}}</div>
        {{/each}}
    </div>


    <div class="row mb-1">
        <div class="col-sm-9 offset-sm-1 col-md-6 offset-md-1 col-lg-6 offset-lg-1 col-11 offset-1">
            <h3>Daily Supplements:</h3>
        </div>
    </div>

    <div class="row gx-0 row-cols-3 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 mb-3">
        {{#each supplements}}
        <div class="col text-center mb-3"><input type="checkbox">{{this}}</div>
        {{/each}}
    </div>


    <div class="row mb-1">
        <div class="col-sm-9 offset-sm-1 col-md-6 offset-md-1 col-lg-6 offset-lg-1 col-11 offset-1">
            <h3>Daily Medications:</h3>
        </div>
    </div>

    <div class="row gx-0 row-cols-3 row-cols-sm-3 row-cols-md-4 row-cols-lg-4 mb-3">
        {{#each medication}}
        <div class="col text-center mb-3"><input type="checkbox">{{this}}</div>
        {{/each}}
    </div>

        <div class = "pull-left mb-4">
            <button type="button" class="btn btn-primary" onclick="location.href='/index'"><i class="fas fa-arrow-left"></i> Back</button>
        </div>

        <div class = "pull-right mb-4">
            <button type="button" class="btn btn-primary" onclick="location.href='/routine'">Edit</button>
          </div>
    </div>
</div>

</body>
</html>