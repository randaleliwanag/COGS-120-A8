  <div class="row">
      {{!--<div class="col-sm-9 offset-sm-1 col-md-6 offset-md-1 col-lg-6 offset-lg-1 col-11 offset-1">--}}
      <h3>What did you do?</h3>
      {{!--</div>--}}
  </div>


  <div class="col text-center" id="activity-options">
      {{#each activity}}
      <button type="button" class="btn btn-light activity-btn">{{this}}</button>
      {{/each}}
      <button type="button" class="btn btn-light add-activity" id="add-activity">Add <i class="fas fa-plus"></i></button>
  </div>


  <div class="row">
    <h3>How did that make you feel?</h3>
  </div>

  <div class="col text-center" id="mood-options">
    {{#each mood}}
    <button type="button" class="btn btn-light mood-btn">{{this}}</button>
    {{/each}}
    <button type="button" class="btn btn-light" id="add-mood">Add <i class="fas fa-plus"></i></button>

      {{!-- These are the original face buttons. Not sure if we are going to keep them or remove them. --}}
